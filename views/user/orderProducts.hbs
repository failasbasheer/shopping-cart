<section>
    <div class="container mt-5">
<table class="table table-sm mt-3">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
         <th scope="col">PRice</th>
       <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each orderPro}}
      <th scope="row">1</th>
      <td>{{this.[0].Name}}</td>
      <td>{{this.[0].Category}}</td>
      <td>{{this.[0].Description}}</td>
      <td>{{this.[0].Price}}</td>
      <td><img style="width: 50px; height:60px;" src="/product-images/{{this.[0]._id}}.jpg" alt="Loading"></td>
      <td><a href="/delete-order-product/?proID={{this.[0]._id}}&orderID={{../orderID}}"  class="btn btn-danger "onclick="return confirm('Are you sure you want to cancel {{this.[0].Name}} from your order ?')" >Cancel</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
    </section>

