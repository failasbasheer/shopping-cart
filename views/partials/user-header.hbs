<header class="bg-light shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light container">
    <a class="navbar-brand fw-bold text-primary" href="/">GadgetGrid</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-dark" href="/">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark position-relative" href="/cart">
            Cart
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" id="cart-count">
              {{cartCount}}
            </span>
          </a>
        </li>
        {{#if user}}
        <li class="nav-item">
          <a class="nav-link text-dark" href="/orders">Orders</a>
        </li>
        {{/if}}
      </ul>

      <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle rounded-pill" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          {{#if user}}
            {{user.name}}
          {{else}}
            Account
          {{/if}}
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3">
          {{#if user}}
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
          {{else}}
          <li><a class="dropdown-item" href="/login">Login</a></li>
          <li><a class="dropdown-item" href="/signup">Sign Up</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>
<style>
  .navbar-brand:hover {
    color: #0056b3 !important;
  }

  .nav-link {
    padding: 0.5rem 1rem;
  }

  .nav-link:hover {
    color: #007bff !important;
  }

  .dropdown-toggle::after {
    vertical-align: middle;
  }

  .dropdown-menu {
    border: none;
  }

  .dropdown-item:active {
    background-color: #007bff;
    color: white;
  }

  .badge {
    font-size: 0.65rem;
    padding: 0.25em 0.4em;
    /* Adjust these values for fine-tuning the position */
    transform: translate(-50%, -50%);
  }
</style>